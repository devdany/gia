<% include ../include/header_admin.ejs %>

<div class="breadcrumb-banner-area body-top" style="background: url('/img/notice_back.png')">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text">
                    <h1 class="text-center">Notice Detail</h1>
                    <div class="breadcrumb-bar">
                        <ul class="breadcrumb">
                            <li><a href="/admin/index">Home</a></li>
                            <li>Notice Detail</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="about-area section-padding-bottom" style="margin-top: 40px;">
    <div class="container">
        <div class="row">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <%=notice.title%>
                </div>
                <div class="panel-body">
                    <div style="padding-bottom: 10px">
                        date :
                       <%=notice.date%>
                    </div>
                    <%if(notice.video){%>
                    <iframe width="600" height="400"
                            src="https://www.youtube.com/embed/<%=notice.video%>">
                    </iframe>
                    <%}%>
                    <%-notice.content%>

                    <hr />
                    <%if(notice.video){%>
                        <%if(isPopup){%>
                            <span style="margin-right: 20px">이 영상은 현재 팝업으로 등록되어 있습니다.</span>
                            <a href="/admin/deleteVideoPopup/<%=notice.no%>" class="btn btn-danger">영상 팝업 삭제</a>
                        <%} else {%>
                            <a href="/admin/addVideoPopup/<%=notice.no%>" class="btn btn-default">이 영상을 팝업으로 등록</a>
                        <%}%>
                    <%}%>
                </div>
            </div>
            </div>

            <a href="/admin/notice" class="btn btn-default" style="margin-right: 15px;">to List</a>
            <a href="/admin/notice/edit/<%=notice.no%>" class="btn btn-primary" style="margin-right: 15px;">Edit</a>
            <a class="btn btn-danger" id="delete">Delete</a>
        </div>
    </div>
</div>
<% include ../include/footer_admin.ejs %>

<script>
    $("#delete").click(function () {
        if(confirm('Are you sure delete notice?')){
            location.href = '/admin/notice/delete/<%=notice.no%>';
        }
    })
</script>