<script src="/js/admin.js"> </script>
<script>
    $("#delpop").click(function () {
        if(confirm('Are you sure delete popup?')){
            $.ajax({
                url: '/admin/deletePopup',
                type: 'POST'
            }).done(function (result) {
                if(result === 'success') {
                    alert('success!');
                    location.reload();
                }else{
                    alert(result);
                }
            }).fail(function (err) {
                console.error(err);
            });
        }
    })
</script>