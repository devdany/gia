<% include ../include/header.ejs %>

<div class="breadcrumb-banner-area body-top">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text">
                    <h1 class="text-center">Notice</h1>
                    <div class="breadcrumb-bar">
                        <ul class="breadcrumb">
                            <li><a href="/">Home</a></li>
                            <li>Notice</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Breadcrumb Banner Area-->
<!--About Area Start-->
<div class="about-area section-padding-bottom" style="margin-top: 40px;">
    <div class="container">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p>Please see our notice board for regular information about GIA services.</p>
        </div>
        <div class="table_box">
            <table class="member_table">
                <colgroup>
                    <col style="width:70%;">
                    <col style="width:15%;text-align: center;">
                    <col style="width:15%;text-align: center;">

                </colgroup>
                <div style="text-align: right">
                    <p>Total <%=noticeCount%></p>
                </div>
                <thead>
                <tr style="border-bottom: none;">
                    <th><span class="table_head">Title</span></th>
                    <th><span class="table_head">Writer</span></th>
                    <th><span class="table_head">Date</span></th>
                </tr>
                </thead>
                <tbody id="tableList">

                <% noticeList.forEach(function(notice){ %>
                <tr class="table_row">
                    <td style="text-align: left; padding-left: 40px;">
                        <a href="/notice/detail/<%= notice.no%>"><%= notice.title %></a>
                    </td>
                    <td style="text-align: center">
                        <%=notice.writer%>
                    </td>
                    <td style="text-align: center"><%=notice.date%></td>
                </tr>
                <%})%>

                </tbody>
            </table> <!-- END member_table-->
            <div class="pagination-content">
                <div class="pagination-button">
                    <ul class="pagination">
                        <li>
                            <a href="<%= paginate.href(true) %>" aria-label="Previous">
                                <i class="fa fa-caret-left" aria-hidden="true"></i>
                            </a>
                        </li>
                        <% pages.forEach(function(page){ %>
                        <li class="<%= paginate.page == page.number ? 'current' : '' %>">
                            <a href="<%= page.url %>"><%= page.number %></a>
                        </li>
                        <% }) %>

                        <li>
                            <a href="<%= paginate.href() %>">
                                <i class="fa fa-caret-right" aria-hidden="true"></i>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of About Area-->


<% include ../include/footer.ejs %>